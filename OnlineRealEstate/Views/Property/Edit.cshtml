@model OnlineRealEstate.Models.PropertyModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        #table {
            border-spacing: 10px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div>
        <h2>Edit</h2>
        @using (Html.BeginForm("Edit", "Property", FormMethod.Post))
        {
            @Html.HiddenFor(Model => Model.PropertyId)
    <table border="1" class="table">
        <tr>
            <td>Land Area</td>
            <td>
                @Html.EditorFor(Model => Model.Area)
            </td>
        </tr>
        <tr>
            <td>Property type</td>
            <td>

                @Html.DropDownListFor(Model => Model.PropertyTypeID, ViewBag.propertyId as SelectList)

                @Html.ValidationMessageFor(model => model.PropertyTypeID)
            </td>
        </tr>
        <tr>
            <td>location</td>
            <td>
                @Html.EditorFor(Model => Model.Location)
                @Html.ValidationMessageFor(model => model.Location)
            </td>
        </tr>
        <tr>
            <td>location</td>
            <td>
                @Html.EditorFor(Model => Model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Cancel", "DisplayPropertyDetails")
            </td>
            <td>
                <input type="submit" value="Submit" />
            </td>
        </tr>

    </table>
        }

    </div>
</body>
</html>


